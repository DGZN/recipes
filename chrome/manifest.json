{
  "manifest_version": 2,
  "name": "Digi Recipes",
  "description": "This extension scrapes recipes",
  "version": "1.0",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action":{
    "default_icon": "icon.png",
    "default_popup": "index.html",
    "default_title": "::Digi Recipes::"
  },
  "content_scripts": [ {
      "all_frames": true,
      "js": ["jquery-2.1.4.min.js", "saveRecipe.js"],
      "matches": [ "http://*/*", "https://*/*" ]
  }],
  "permissions": ["tabs", "<all_urls>"]
}
